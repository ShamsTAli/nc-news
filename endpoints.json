      }
    ]
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to a single article",
    "queries": [],
    "exampleResponse": {
        "comment_id": 19,
        "body": "This article is very informative...",
        "article_id": 2,
